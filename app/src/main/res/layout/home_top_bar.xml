<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/_7mdp"
    android:background="@drawable/top_bac_rec">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="@dimen/_43mdp"
        android:layout_height="@dimen/_33mdp"
        android:src="@drawable/pro1"
        app:civ_border_width="2dp"
        android:layout_alignParentLeft="true"
        app:civ_border_color="#FFFFFF"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profile_image"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/profile_image"
        android:text="Rashmi Ghosh"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/profile_image"
        android:layout_below="@id/name"
        android:text="Corporate Employee"
        android:textSize="13sp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/notifictions"
        android:layout_width="@dimen/_22mdp"
        android:layout_height="@dimen/_22mdp"
        android:layout_marginRight="@dimen/_5mdp"
        android:layout_marginTop="@dimen/_3mdp"
        android:layout_alignParentRight="true"
        android:background="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_noti"/>


</RelativeLayout>